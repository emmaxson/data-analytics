		{
			"name": "[concat(parameters('factoryName'), '/DAG2 Incremental Dataflow')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "DestinationDataset_7hb",
								"type": "DatasetReference"
							},
							"name": "MySQLSource"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "DestinationDataset_7hb",
								"type": "DatasetReference"
							},
							"name": "sink1"
						}
					],
					"transformations": [
						{
							"name": "derivedColumn1"
						}
					],
					"scriptLines": [
						"source(output(",
						"          emp_no as string,",
						"          birth_date as string,",
						"          first_name as string,",
						"          last_name as string,",
						"          gender as string,",
						"          hire_date as string",
						"     ),",
						"     allowSchemaDrift: false,",
						"     validateSchema: false,",
						"     limit: 1000,",
						"     ignoreNoFilesFound: false,",
						"     waterMarkColumn: 'emp_no',",
						"     mode: 'read') ~> MySQLSource",
						"MySQLSource derive(gender = iif(gender == \"M\", \"Male\", iif(gender == \"F\", \"Female\", \"Not Defined\"))) ~> derivedColumn1",
						"derivedColumn1 sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     input(",
						"          emp_no as string,",
						"          birth_date as string,",
						"          first_name as string,",
						"          last_name as string,",
						"          gender as string,",
						"          hire_date as string",
						"     ),",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true) ~> sink1"
					]
				}
			},
